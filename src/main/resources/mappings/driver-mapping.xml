<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="DriverDAO">

	<!-- 회원가입 -->
	<insert id="insertDriver">
	<![CDATA[[
		INSERT INTO
		DRIVER(ID,PASSWORD,NAME,GENDER,TEL,TEL1,TEL2,TEL3,EMAIL)
		VALUES(#{ID},#{PASSWORD},#{NAME},#{GENDER},#{TEL1}||#{TEL2}||#{TEL3},#{TEL1},#{TEL2},#{TEL3},#{EAMIL})
		]]>
	</insert>

	<!-- 로그인 -->
	<select id="loginDriver" resultType="driver">
	<![CDATA[[
		SELECT * FROM DRIVER WHERE
		ID=#{ID}
		]]>
	</select>

	<!-- 회원정보 수정 -->
	<update id="updateDriver">
	<![CDATA[[
		UPDATE DRIVER SET
		TEL=#{TEL1}||#{TEL2}||#{TEL3},TEL1=#{TEL1},TEL2=#{TEL2},TEL3=#{TEL3},EMAIL=#{EAMIL}
		WHERE ID=#{ID}
		]]>
	</update>

	<!-- 비밀번호 수정 -->
	<update id="pwUpdateDriver">
	<![CDATA[[
		UPDATE DRIVER SET PASSWORD=#{PASSWORD} WHERE ID=#{ID}
		]]>
	</update>
</mapper>
