<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardDAO">
	<sql id="searchCount">
		<choose>
			<!-- 검색옵션이 전체검색 일경우 -->
			<when test="searchOption=='all'">
		<![CDATA[
		WHERE NAME LIKE '%'||#{keyword}||'%' 
		OR CONTENT LIKE '%'||#{keyword}||'%'
		OR TITLE LIKE '%'||#{keyword}||'%'
		]]>
			</when>
			<!-- 검색옵션이 전체가 아닐경우 -->
			<otherwise>
		<![CDATA[
		WHERE ${searchOption} LIKE '%'||#{keyword}||'%'
		]]>
			</otherwise>
		</choose>
	</sql>
	<sql id="search">
		<choose>
			<!-- 검색옵션이 전체검색 일경우 -->
			<when test="searchOption=='all'">
			<![CDATA[
			WHERE
			NAME LIKE '%'||#{keyword}||'%' 
			OR CONTENT LIKE '%'||#{keyword}||'%'
			OR TITLE LIKE '%'||#{keyword}||'%'
			]]>
			</when>
			<when test="searchOption=='comment'">
			<![CDATA[
			WHERE SEQ IN ( SELECT DISTINCT SEQ FROM COMMENTS WHERE CONTENT LIKE '%'||#{keyword}||'%' )
			]]>
			</when>
			<when test="searchOption=='cname'">
			<![CDATA[
			WHERE SEQ IN ( SELECT DISTINCT SEQ FROM COMMENTS WHERE NAME LIKE '%'||#{keyword}||'%' )
			]]>
			</when>
			<!-- 검색옵션이 전체가 아닐경우 -->
			<otherwise>
			<![CDATA[
			WHERE ${searchOption} LIKE '%'||#{keyword}||'%' 
			]]>
			</otherwise>
		</choose>
	</sql>
	<sql id="header">
	<![CDATA[
	SELECT * FROM (SELECT ROWNUM AS rn,A.*FROM(
	]]>
	</sql>
	<sql id="footer">
	<![CDATA[
	)A)WHERE rn BETWEEN #{start} AND #{end}
	]]>
	</sql>
	<!-- 글쓰기 -->
	<insert id="insertBoard">
	<![CDATA[
		INSERT INTO BOARD(SEQ,ID,NAME,TITLE,CONTENT) VALUES(board_seq.nextval,#{id},#{name},#{title},#{content})
		]]>
	</insert>

	<!-- 글목록 가져오기 -->
	<select id="getBoardList" resultType="board">
		<include refid="header"></include>
	<![CDATA[
	SELECT ROWNUM,SEQ,ID,TITLE,CONTENT,NAME,REGDATE,BEST,CNT FROM (SELECT * FROM BOARD ORDER BY SEQ DESC) 
	]]>
		<include refid="search"></include>
		<include refid="footer"></include>
	</select>


	<select id="getBoardCommentContentListCount"
		resultType="Integer"> 
		<![CDATA[ 
		SELECT COUNT(DISTINCT(SEQ)) FROM COMMENTS WHERE CONTENT LIKE '%'||#{keyword}||'%'
		]]>
	</select>
	<select id="getBoardCommentNameListCount" resultType="Integer"> 
		<![CDATA[ 
		SELECT COUNT(DISTINCT(SEQ)) FROM COMMENTS WHERE NAME LIKE '%'||#{keyword}||'%' 
		]]>
	</select>

	<!-- 전체 글수 가져오기 -->
	<select id="getListCount" resultType="Integer">
	<![CDATA[
	SELECT COUNT(*) FROM BOARD	
	]]>
		<include refid="searchCount"></include>
	</select>

	<select id="getBoard" resultType="board">
	<![CDATA[
	SELECT * FROM BOARD WHERE SEQ = #{seq}
	]]>
	</select>

	<update id="updateBoard">
	<![CDATA[
	UPDATE BOARD SET TITLE=#{title}, CONTENT=#{content} WHERE SEQ =#{seq}
	]]>
	</update>

	<update id="updateCnt">
	<![CDATA[
	UPDATE BOARD SET CNT=CNT+1 WHERE SEQ=#{seq}
	]]>

	</update>

	<delete id="deleteBoard">
	<![CDATA[
	DELETE BOARD WHERE SEQ=#{seq}
	]]>
	</delete>

</mapper>
