<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="DriverDAO">

	<!-- 회원가입 -->
	<insert id="insertDriver">
	<![CDATA[
		INSERT INTO
		DRIVER(ID,PASSWORD,NAME,GENDER,TEL,TEL1,TEL2,TEL3,EMAIL)
		VALUES(#{id},#{password},#{name},#{gender},#{tel1}||#{tel2}||#{tel3},#{tel1},#{tel2},#{tel3},#{email})
		]]>
	</insert>

	<!-- 로그인 -->
	<select id="loginDriver" resultType="driver">
	<![CDATA[
		SELECT * FROM DRIVER WHERE
		ID=#{id}
		]]>
	</select>

	<!-- 회원정보 수정 -->
	<update id="updateDriver">
	<![CDATA[
		UPDATE DRIVER SET
		TEL=#{tel1}||#{tel2}||#{tel3},TEL1=#{tel1},TEL2=#{tel2},TEL3=#{tel3},EMAIL=#{email}
		WHERE ID=#{id}
		]]>
	</update>

	<!-- 비밀번호 수정 -->
	<update id="pwUpdateDriver">
	<![CDATA[
		UPDATE DRIVER SET PASSWORD=#{password} WHERE ID=#{id}
		]]>
	</update>
</mapper>
